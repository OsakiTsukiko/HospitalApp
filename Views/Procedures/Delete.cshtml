@model HospitalManagement.Models.Procedure

@{
    ViewData["Title"] = "Delete Procedure";
}

<div class="container">
    <h1>Delete Procedure</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this procedure?</h3>
    </div>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Department)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Duration)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Duration) minutes</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div> 