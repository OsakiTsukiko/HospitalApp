@model HospitalManagement.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="container">
    <h1>Edit Appointment</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="PatientId" class="control-label"></label>
                            <select asp-for="PatientId" class="form-control" asp-items="@(new SelectList(ViewBag.Patients, "Id", "Name"))"></select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ProcedureId" class="control-label">Procedure</label>
                            <select asp-for="ProcedureId" class="form-select" asp-items="@(new SelectList(ViewBag.Procedures, "Id", "Name"))">
                                <option value="">Select Procedure</option>
                            </select>
                            <span asp-validation-for="ProcedureId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Room" class="control-label">Room</label>
                            <input asp-for="Room" class="form-control" placeholder="Enter room number" />
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateTime" class="control-label">Date & Time</label>
                            <input asp-for="DateTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 